[
  {
    "name": "nginx",
    "image": "277707129399.dkr.ecr.eu-west-2.amazonaws.com/base/nginx:1.27-bookworm",
    "cpu": 256,
    "memory": 512,
    "essential": true,
    "environment": [
      {
        "name": "NGINX_PORT",
        "value": "80"
      }
    ],
    "portMappings": [
      {
        "name": "nginx-80-tcp",
        "containerPort": 80,
        "hostPort": 80,
        "protocol": "tcp",
        "appProtocol": "http"
      }
    ],
    "healthCheck": {
      "command": ["CMD-SHELL", "curl -f http://localhost/health || exit 1"],
      "interval": 30,
      "timeout": 5,
      "retries": 3,
      "startPeriod": 10
    },
    "mountPoints": [
      {
        "sourceVolume": "${volume_name}",
        "containerPath": "/tmp/volume"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-stream-prefix": "nginx",
        "awslogs-group": "${log_group}",
        "awslogs-region": "${aws_region}"
      }
    }
  }
]
